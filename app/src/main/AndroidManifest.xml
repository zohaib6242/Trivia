<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zohaib.trivia">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.Trivia"
        android:screenOrientation="portrait"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config">
        <activity android:name=".activties.ScoreActivity"></activity>
        <activity android:name=".activties.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activties.QuestionsActivity" />
        <activity android:name=".activties.OptionActivity" />
        <activity android:name=".activties.CategoryActivity" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>